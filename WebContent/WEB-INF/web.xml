<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>SpringMVCExample</display-name>
	<servlet>
	  	<servlet-name>billing-app</servlet-name>
	  	<servlet-class>
	  		org.springframework.web.servlet.DispatcherServlet
	  	</servlet-class>
	  	<load-on-startup>1</load-on-startup>
	  		
	</servlet>
	
 	<!-- ========== LOGIN ========== -->
  	<servlet-mapping>
  		<servlet-name>billing-app</servlet-name>
  		<url-pattern>/loginForm</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>billing-app</servlet-name>
  		<url-pattern>/login</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>billing-app</servlet-name>
  		<url-pattern>/logout</url-pattern>
  	</servlet-mapping>
  	
  	<!-- ========== REGISTER ========== -->
  	<servlet-mapping>
  		<servlet-name>billing-app</servlet-name>
  		<url-pattern>/registerForm</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>billing-app</servlet-name>
  		<url-pattern>/register</url-pattern>
  	</servlet-mapping>
  	
 	<!-- ========== HOME ========== -->  	
  	<servlet-mapping>
  		<servlet-name>billing-app</servlet-name>
  		<url-pattern>/home</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>billing-app</servlet-name>
  		<url-pattern>/admin/users</url-pattern>
  	</servlet-mapping>	
  	
 	<!-- ========== ADMIN USERS ========== -->  	
  	<servlet-mapping>
  		<servlet-name>billing-app</servlet-name>
  		<url-pattern>/admin/user</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>billing-app</servlet-name>
  		<url-pattern>/admin/editUserForm</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>billing-app</servlet-name>
  		<url-pattern>/admin/editUser</url-pattern>
  	</servlet-mapping>
  	
  	
 	<!-- ========== ADMIN ITEMS ========== -->
  	<servlet-mapping>
  		<servlet-name>billing-app</servlet-name>
  		<url-pattern>/admin/items</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>billing-app</servlet-name>
  		<url-pattern>/admin/item</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>billing-app</servlet-name>
  		<url-pattern>/admin/addItem</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>billing-app</servlet-name>
  		<url-pattern>/admin/editItemForm</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>billing-app</servlet-name>
  		<url-pattern>/admin/editItem</url-pattern>
  	</servlet-mapping>
  
  	<!-- ========== BILLING ========== -->
  	<servlet-mapping>
  		<servlet-name>billing-app</servlet-name>
  		<url-pattern>/billing</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>billing-app</servlet-name>
  		<url-pattern>/tables</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>billing-app</servlet-name>
  		<url-pattern>/order</url-pattern>
  	</servlet-mapping>
  	
  	<servlet-mapping>
  		<servlet-name>billing-app</servlet-name>
  		<url-pattern>/addItem</url-pattern>
  	</servlet-mapping>
  	
  	<servlet>
	  	<servlet-name>index</servlet-name>
	  	<servlet-class>web.IndexServlet</servlet-class>
  	</servlet>
  	
  </web-app>